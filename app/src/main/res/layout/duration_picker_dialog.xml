<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2b2632"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CHỌN THỜI GIAN"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#FF2983"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_timer_background"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_timerDialog_showTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"

            />
    </FrameLayout>
    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stepSize="10"
        android:value="20.0"
        android:valueFrom="0.0"
        android:valueTo="2700.0"
        app:haloColor="@color/white"
        app:thumbColor="#FF2983"
        app:trackColor="#FF2983"
        app:tickColor="@color/white"
        android:layout_marginTop="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_timerDialog_huy"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="HỦY"
            android:textColor="@color/white"
            android:background="@drawable/btn_white_corners_layout"
            android:gravity="center"
            android:textSize="25dp"

            />
        <TextView
            android:id="@+id/tv_timerDialog_ok"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="OK"
            android:textColor="@color/white"
            android:background="@drawable/btn_white_corners_layout"
            android:gravity="center"
            android:textSize="25dp"
            />
    </LinearLayout>
</LinearLayout>