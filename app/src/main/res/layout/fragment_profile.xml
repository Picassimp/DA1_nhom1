<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradientbackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_profileactivity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Xin chào,....."
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="140dp"
        app:cardCornerRadius="60dp"
        >
        <ImageView
            android:src="@drawable/ic_failled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_profileactivity_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:text="DAILY quiz"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_profileactivity_totalquiz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Total Quiz"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_profileactivity_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_profileactivity_totalpoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Total Point"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_profileactivity_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100 điểm"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:src="@drawable/hr"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Thay đổi tên"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_profileactivity_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Total Point"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
        <ImageView
            android:id="@+id/img_profileactivity_music"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_addmusic"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="35dp"
        android:padding="10dp"
        android:backgroundTint="@color/pink"
        android:text="Đăng xuất"
        android:textColor="@color/white"
        android:textSize="25dp"/>

</LinearLayout>